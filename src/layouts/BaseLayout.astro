---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Breadcrumbs from '../components/layout/Breadcrumbs.astro';
import SEOHead from '../components/seo/SEOHead.astro';
import JsonLd from '../components/seo/JsonLd.astro';
import type { StationData, BreadcrumbItem as SEOBreadcrumb } from '../utils/seo';
import '../assets/styles/global.css';

interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  type?: 'website' | 'article' | 'place';
  canonicalUrl?: string;
  noindex?: boolean;
  breadcrumbs?: BreadcrumbItem[];
  // SEO enhancements
  includeWebsiteSchema?: boolean;
  stateDirectory?: {
    name: string;
    stationCount: number;
  };
  station?: StationData;
  article?: {
    author: string;
  };
  publishedDate?: string;
  modifiedDate?: string;
  schema?: {
    type: 'WebSite' | 'Organization' | 'FireStation' | 'BreadcrumbList' | 'Article';
    data: Record<string, any>;
  };
}

const {
  title,
  description,
  image,
  imageAlt,
  type = 'website',
  canonicalUrl,
  noindex = false,
  breadcrumbs,
  includeWebsiteSchema = false,
  stateDirectory,
  station,
  article,
  publishedDate,
  modifiedDate,
  schema,
} = Astro.props;

// Convert breadcrumbs to SEO format
const seoBreadcrumbs: SEOBreadcrumb[] | undefined = breadcrumbs?.map(item => ({
  name: item.label,
  url: item.href || '',
}));
---

<!doctype html>
<html lang="es-MX">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <SEOHead
      title={title}
      description={description}
      image={image}
      imageAlt={imageAlt}
      type={type}
      canonicalUrl={canonicalUrl}
      noindex={noindex}
      breadcrumbs={seoBreadcrumbs}
      includeWebsiteSchema={includeWebsiteSchema}
      stateDirectory={stateDirectory}
      station={station}
      article={article}
      publishedDate={publishedDate}
      modifiedDate={modifiedDate}
    />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/images/apple-touch-icon.png" />

    <!-- Web App Manifest -->
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#dc2626" />

    <!-- Preconnect for faster font loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Preload critical fonts for better LCP -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap"
      />
    </noscript>

    <!-- DNS Prefetch for external resources -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />

    {schema && <JsonLd type={schema.type} data={schema.data} />}

    <!-- Additional head elements from page -->
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:px-4 focus:py-2 focus:bg-fire-600 focus:text-white focus:rounded-lg">
      Saltar al contenido principal
    </a>

    <Header />

    {breadcrumbs && breadcrumbs.length > 0 && (
      <Breadcrumbs items={breadcrumbs} />
    )}

    <main id="main-content" class="flex-1">
      <slot />
    </main>

    <Footer />

    <!-- Service Worker Registration -->
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then((registration) => {
              console.log('SW registered:', registration.scope);
            })
            .catch((error) => {
              console.log('SW registration failed:', error);
            });
        });
      }
    </script>
  </body>
</html>
