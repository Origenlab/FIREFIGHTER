---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import SEOHead from '../components/seo/SEOHead.astro';
import JsonLd from '../components/seo/JsonLd.astro';
import '../assets/styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  type?: 'website' | 'article';
  canonicalUrl?: string;
  noindex?: boolean;
  schema?: {
    type: 'WebSite' | 'Organization' | 'FireStation' | 'BreadcrumbList' | 'Article';
    data: Record<string, any>;
  };
}

const {
  title,
  description,
  image,
  imageAlt,
  type = 'website',
  canonicalUrl,
  noindex = false,
  schema,
} = Astro.props;
---

<!doctype html>
<html lang="es-MX">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <SEOHead
      title={title}
      description={description}
      image={image}
      imageAlt={imageAlt}
      type={type}
      canonicalUrl={canonicalUrl}
      noindex={noindex}
    />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/images/apple-touch-icon.png" />

    <!-- Web App Manifest -->
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#dc2626" />

    <!-- Preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    {schema && <JsonLd type={schema.type} data={schema.data} />}
  </head>
  <body class="min-h-screen flex flex-col">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:px-4 focus:py-2 focus:bg-fire-600 focus:text-white focus:rounded-lg">
      Saltar al contenido principal
    </a>

    <Header />

    <main id="main-content" class="flex-1">
      <slot />
    </main>

    <Footer />
  </body>
</html>
