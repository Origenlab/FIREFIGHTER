---
/**
 * StationCard Component - Clean Professional Design
 * Focused on essential information for emergency services
 */

interface Props {
  station: {
    id: string;
    data: {
      name: string;
      serviceType: string;
      status: string;
      state: string;
      stateSlug: string;
      municipality: string;
      city: string;
      address: string;
      phone: string;
      services: string[];
      latitude: number;
      longitude: number;
    };
  };
}

const { station } = Astro.props;
const { data } = station;

const serviceTypeConfig: Record<string, { label: string; color: string }> = {
  'profesional': { label: 'Profesional', color: '#dc2626' },
  'voluntario': { label: 'Voluntario', color: '#2563eb' },
  'industrial': { label: 'Industrial', color: '#d97706' },
  'aeroportuario': { label: 'Aeroportuario', color: '#9333ea' },
  'proteccion-civil': { label: 'Protección Civil', color: '#059669' },
};

const serviceLabels: Record<string, string> = {
  'combate-incendios': 'Incendios',
  'atencion-medica': 'Médico',
  'rescate-vehicular': 'Rescate',
  'rescate-acuatico': 'Acuático',
  'materiales-peligrosos': 'HAZMAT',
  'rescate-alturas': 'Alturas',
  'proteccion-civil': 'Prot. Civil',
  'capacitacion': 'Capacitación',
  'prevencion': 'Prevención',
  'ambulancia': 'Ambulancia',
};

const typeConfig = serviceTypeConfig[data.serviceType] || serviceTypeConfig['profesional'];
const stationUrl = `/directorio/${data.stateSlug}/${station.id.split('/').pop()?.replace('.md', '')}`;
---

<article class="bg-white rounded-xl overflow-hidden transition-shadow duration-200 hover:shadow-lg" style="border: 1px solid #e2e8f0;">
  <!-- Colored Top Bar -->
  <div class="h-1 w-full" style={`background-color: ${typeConfig.color};`}></div>

  <div class="p-5">
    <!-- Header: Type Badge + Status -->
    <div class="flex items-center justify-between mb-3">
      <span class="px-2.5 py-1 rounded text-xs font-semibold" style={`background-color: ${typeConfig.color}12; color: ${typeConfig.color};`}>
        {typeConfig.label}
      </span>
      {data.status === 'activa' && (
        <span class="flex items-center gap-1.5 text-xs font-medium" style="color: #16a34a;">
          <span class="w-1.5 h-1.5 rounded-full" style="background-color: #16a34a;"></span>
          Activa
        </span>
      )}
    </div>

    <!-- Station Name -->
    <h3 class="font-bold text-lg mb-2 leading-tight" style="color: #0f172a;">
      <a href={stationUrl} class="hover:underline">{data.name}</a>
    </h3>

    <!-- Location -->
    <p class="text-sm font-medium mb-1" style="color: #475569;">{data.municipality}, {data.state}</p>
    <p class="text-sm mb-4" style="color: #64748b;">{data.address}</p>

    <!-- Services -->
    <div class="flex flex-wrap gap-1.5 mb-4 pb-4" style="border-bottom: 1px solid #f1f5f9;">
      {data.services.slice(0, 4).map((service) => (
        <span class="px-2 py-0.5 rounded text-xs font-medium" style="background-color: #f1f5f9; color: #475569;">
          {serviceLabels[service] || service}
        </span>
      ))}
      {data.services.length > 4 && (
        <span class="px-2 py-0.5 rounded text-xs" style="color: #94a3b8;">+{data.services.length - 4}</span>
      )}
    </div>

    <!-- Actions -->
    <div class="flex gap-3">
      <a
        href={`tel:${data.phone}`}
        class="flex-1 flex items-center justify-center gap-2 py-2.5 rounded-lg text-sm font-semibold transition-colors"
        style="background-color: #f8fafc; color: #334155; border: 1px solid #e2e8f0;"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        Llamar
      </a>
      <a
        href={stationUrl}
        class="flex-1 flex items-center justify-center gap-2 py-2.5 rounded-lg text-sm font-semibold transition-colors"
        style="background-color: #dc2626; color: white;"
      >
        Ver detalles
      </a>
    </div>
  </div>
</article>
