  'combate-incendios': { label: 'Incendios', icon: 'ğŸ”¥' },
  'atencion-medica': { label: 'MÃ©dico', icon: 'ğŸ¥' },
  'rescate-vehicular': { label: 'Rescate', icon: 'ğŸš—' },
  'rescate-acuatico': { label: 'AcuÃ¡tico', icon: 'ğŸŒŠ' },
  'materiales-peligrosos': { label: 'HAZMAT', icon: 'â˜¢ï¸' },
  'rescate-alturas': { label: 'Alturas', icon: 'ğŸ”ï¸' },
  'proteccion-civil': { label: 'Prot. Civil', icon: 'ğŸ›¡ï¸' },
  'capacitacion': { label: 'CapacitaciÃ³n', icon: 'ğŸ“š' },
