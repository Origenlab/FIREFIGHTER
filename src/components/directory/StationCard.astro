---
/**
 * StationCard Component - Premium Professional Design
 * Modern card with elegant styling and premium feel
 */

interface Props {
  station: {
    id: string;
    data: {
      name: string;
      serviceType: string;
      status: string;
      state: string;
      stateSlug: string;
      municipality: string;
      city: string;
      address: string;
      phone: string;
      services: string[];
      latitude: number;
      longitude: number;
    };
  };
}

const { station } = Astro.props;
const { data } = station;

const serviceTypeConfig: Record<string, { label: string; gradient: string; icon: string; color: string }> = {
  'profesional': {
    label: 'Profesional',
    gradient: 'from-red-500 to-red-700',
