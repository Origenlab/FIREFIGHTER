    gradient: 'from-blue-500 to-blue-700',
    icon: 'ğŸ’™',
    color: '#2563eb'
  },
  'industrial': {
    label: 'Industrial',
    gradient: 'from-amber-500 to-amber-700',
    icon: 'ğŸ­',
    color: '#d97706'
  },
  'aeroportuario': {
    label: 'Aeroportuario',
    gradient: 'from-purple-500 to-purple-700',
    icon: 'âœˆï¸',
    color: '#9333ea'
  },
  'proteccion-civil': {
    label: 'ProtecciÃ³n Civil',
    gradient: 'from-emerald-500 to-emerald-700',
    icon: 'ğŸ›¡ï¸',
    color: '#059669'
  },
