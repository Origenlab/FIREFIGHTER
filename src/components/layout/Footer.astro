// Organization Schema for SEO
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "@id": `${siteUrl}/#organization`,
  "name": "Firefighter México",
  "alternateName": "Directorio Nacional de Estaciones de Bomberos",
  "url": siteUrl,
  "logo": {
    "@type": "ImageObject",
    "url": `${siteUrl}/images/logo-firefighter-mexico.svg`,
    "width": 200,
    "height": 50
  },
  "description": "El directorio más completo de estaciones de bomberos en México. Encuentra información de contacto, ubicación y servicios de bomberos en los 32 estados.",
  "foundingDate": "2024",
  "areaServed": {
    "@type": "Country",
    "name": "México",
    "identifier": "MX"
  },
  "sameAs": socialLinks.map(s => s.href),
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "911",
    "contactType": "emergency",
    "areaServed": "MX",
    "availableLanguage": "Spanish"
  },
  "knowsAbout": [
    "Estaciones de Bomberos",
    "Emergencias",
    "Rescate",
    "Protección Civil",
    "Servicios de Emergencia México"
  ]
};
---

<footer class="bg-slate-900 text-slate-300">
  <!-- Emergency Banner -->
  <div class="bg-gold-500 text-slate-900 py-4">
    <div class="container-custom flex flex-col sm:flex-row items-center justify-center gap-4 text-center">
      <span class="font-semibold">¿Emergencia? No esperes.</span>
      <a
        href="tel:911"
        class="inline-flex items-center gap-2 px-6 py-2 bg-slate-900 text-white font-bold rounded-full hover:bg-slate-800 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        Llama al 911
      </a>
    </div>
  </div>

  <!-- Main Footer -->
  <div class="container-custom py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <div class="mb-4">
          <Logo variant="white" size="md" />
        </div>
        <p class="text-slate-400 text-sm leading-relaxed mb-6">
          El directorio más completo de estaciones de bomberos en México. Encuentra información de contacto, ubicación y servicios de bomberos en los 32 estados.
        </p>

        <!-- Social Links -->
        <div class="flex items-center gap-3">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-9 h-9 bg-slate-800 hover:bg-fire-600 rounded-lg flex items-center justify-center transition-colors group"
              aria-label={`Síguenos en ${social.name}`}
            >
              <svg
                class="w-4 h-4 text-slate-400 group-hover:text-white transition-colors"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path d={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Estados Populares -->
      <div>
        <h3 class="font-display font-semibold text-white mb-4">Estados Populares</h3>
        <ul class="space-y-2">
          {popularStates.map((state) => (
            <li>
              <a
                href={`/directorio/${state.slug}`}
                class="text-slate-400 hover:text-white transition-colors text-sm"
              >
                {state.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Recursos -->
      <div>
        <h3 class="font-display font-semibold text-white mb-4">Recursos</h3>
        <ul class="space-y-2">
          {footerLinks.recursos.map(({ href, label }) => (
            <li>
              <a
                href={href}
                class="text-slate-400 hover:text-white transition-colors text-sm"
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="font-display font-semibold text-white mb-4">Información</h3>
        <ul class="space-y-2">
          {footerLinks.legal.map(({ href, label }) => (
            <li>
              <a
                href={href}
                class="text-slate-400 hover:text-white transition-colors text-sm"
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-slate-800">
    <div class="container-custom py-6 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-slate-500 text-sm text-center sm:text-left">
        &copy; {currentYear} Firefighter México. Directorio independiente no gubernamental.
      </p>
      <p class="text-slate-500 text-sm">
        Hecho con ❤️ para México
      </p>
    </div>
  </div>

  <!-- Organization Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
</footer>
