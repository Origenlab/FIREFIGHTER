---
/**
 * Footer Component - Premium Solid Design
 * Professional footer with strong visual hierarchy
 */
import states from '../../data/states.json';

const currentYear = new Date().getFullYear();
const siteUrl = 'https://firefighter.com.mx';

const popularStates = states.slice(0, 6);

const footerLinks = {
  directorio: [
    { href: '/directorio', label: 'Todas las estaciones' },
    { href: '/directorio/ciudad-de-mexico', label: 'CDMX' },
    { href: '/directorio/jalisco', label: 'Jalisco' },
    { href: '/directorio/nuevo-leon', label: 'Nuevo León' },
  ],
  recursos: [
    { href: '/mapa', label: 'Mapa Interactivo' },
    { href: '/emergencias', label: 'Emergencias' },
    { href: '/blog', label: 'Blog' },
    { href: '/agregar-estacion', label: 'Agregar Estación' },
  ],
  legal: [
    { href: '/acerca-de', label: 'Acerca de' },
    { href: '/contacto', label: 'Contacto' },
    { href: '/privacidad', label: 'Privacidad' },
  ],
};

// Social media links
const socialLinks = [
  {
    name: 'Facebook',
    href: 'https://facebook.com/firefightermx',
    icon: 'M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z'
  },
  {
    name: 'Twitter',
    href: 'https://twitter.com/firefightermx',
    icon: 'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z'
  },
  {
    name: 'Instagram',
    href: 'https://instagram.com/firefightermx',
    icon: 'M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z'
  },
  {
    name: 'YouTube',
    href: 'https://youtube.com/@firefightermx',
    icon: 'M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z'
  },
];

// Organization Schema for SEO
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "@id": `${siteUrl}/#organization`,
  "name": "Firefighter México",
  "alternateName": "Directorio Nacional de Estaciones de Bomberos",
  "url": siteUrl,
  "logo": {
    "@type": "ImageObject",
    "url": `${siteUrl}/images/logo-firefighter-mexico.svg`,
    "width": 200,
    "height": 50
  },
  "description": "El directorio más completo de estaciones de bomberos en México. Encuentra información de contacto, ubicación y servicios de bomberos en los 32 estados.",
  "foundingDate": "2024",
  "areaServed": {
    "@type": "Country",
    "name": "México",
    "identifier": "MX"
  },
  "sameAs": socialLinks.map(s => s.href),
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "911",
    "contactType": "emergency",
    "areaServed": "MX",
    "availableLanguage": "Spanish"
  },
  "knowsAbout": [
    "Estaciones de Bomberos",
    "Emergencias",
    "Rescate",
    "Protección Civil",
    "Servicios de Emergencia México"
  ]
};
---

<footer class="bg-slate-900">
  <!-- Main Footer -->
  <div class="container-custom py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-10 lg:gap-12">

      <!-- Brand Column -->
      <div class="col-span-2 md:col-span-4 lg:col-span-2">
        <a href="/" class="inline-flex items-center gap-3 mb-6">
          <div class="w-12 h-12 bg-fire-600 rounded-xl flex items-center justify-center">
            <svg class="w-7 h-7 text-white" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M12 2C12 2 7 8 7 13C7 16.866 9.23858 20 12 20C14.7614 20 17 16.866 17 13C17 8 12 2 12 2Z"/>
            </svg>
          </div>
          <div>
            <span class="font-display font-bold text-xl text-white block">Firefighter</span>
            <span class="text-slate-400 text-sm">México</span>
          </div>
        </a>
        <p class="text-slate-400 text-sm leading-relaxed mb-6 max-w-sm">
          Directorio nacional de estaciones de bomberos en México. Información de contacto y servicios de emergencia de los 32 estados.
        </p>

        <!-- Social Links -->
        <div class="flex items-center gap-3">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-slate-800 hover:bg-fire-600 rounded-lg flex items-center justify-center transition-colors"
              aria-label={`Síguenos en ${social.name}`}
            >
              <svg class="w-5 h-5 text-slate-400 hover:text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Directorio -->
      <div>
        <h3 class="font-display font-bold text-white text-sm uppercase tracking-wider mb-5">Directorio</h3>
        <ul class="space-y-3">
          {footerLinks.directorio.map(({ href, label }) => (
            <li>
              <a href={href} class="text-slate-400 hover:text-white text-sm transition-colors">
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Recursos -->
      <div>
        <h3 class="font-display font-bold text-white text-sm uppercase tracking-wider mb-5">Recursos</h3>
        <ul class="space-y-3">
          {footerLinks.recursos.map(({ href, label }) => (
            <li>
              <a href={href} class="text-slate-400 hover:text-white text-sm transition-colors">
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="font-display font-bold text-white text-sm uppercase tracking-wider mb-5">Legal</h3>
        <ul class="space-y-3">
          {footerLinks.legal.map(({ href, label }) => (
            <li>
              <a href={href} class="text-slate-400 hover:text-white text-sm transition-colors">
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Emergency Strip -->
  <div class="bg-fire-600">
    <div class="container-custom py-5">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <div class="flex items-center gap-4 text-white">
          <div class="w-12 h-12 bg-fire-700 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
          </div>
          <div>
            <span class="font-bold text-lg block">¿Tienes una emergencia?</span>
            <span class="text-fire-100 text-sm">Llama inmediatamente al número de emergencias</span>
          </div>
        </div>
        <a
          href="tel:911"
          class="inline-flex items-center gap-3 px-8 py-4 bg-white text-fire-600 font-bold text-lg rounded-xl hover:bg-fire-50 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Llamar al 911
        </a>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="bg-slate-950">
    <div class="container-custom py-5">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm">
        <p class="text-slate-500">
          © {currentYear} Firefighter México. Directorio independiente no gubernamental.
        </p>
        <div class="flex items-center gap-6">
          <span class="text-slate-600">Hecho con dedicación en México</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Organization Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
</footer>
