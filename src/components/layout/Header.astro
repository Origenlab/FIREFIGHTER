---
/**
 * Header Component - Professional Design
 * Clean, visible, and fully responsive
 */

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Inicio' },
  { href: '/directorio', label: 'Directorio' },
  { href: '/mapa', label: 'Mapa' },
  { href: '/emergencias', label: 'Emergencias' },
  { href: '/blog', label: 'Blog' },
];

const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
};
---

<!-- Topbar - Dark -->
<div class="bg-slate-900 border-b border-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-10">
      <!-- Left: Contact Info -->
      <div class="flex items-center gap-4 text-sm">
        <a href="mailto:contacto@firefighter.com.mx" class="hidden sm:flex items-center gap-2 text-slate-400 hover:text-white transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <span>contacto@firefighter.com.mx</span>
        </a>
        <span class="hidden sm:flex items-center gap-2 text-slate-400">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>24/7</span>
        </span>
        <!-- Mobile Emergency -->
        <a href="tel:911" class="sm:hidden flex items-center gap-2 text-white font-medium">
          <span class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
          <span>911</span>
        </a>
      </div>

      <!-- Right: Social + Emergency -->
      <div class="flex items-center gap-3">
        <!-- Social Icons -->
        <div class="hidden md:flex items-center gap-1">
          <a href="https://facebook.com" target="_blank" rel="noopener" class="w-8 h-8 flex items-center justify-center text-slate-500 hover:text-white rounded transition-colors" aria-label="Facebook">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </a>
          <a href="https://twitter.com" target="_blank" rel="noopener" class="w-8 h-8 flex items-center justify-center text-slate-500 hover:text-white rounded transition-colors" aria-label="X">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
        </div>
        <!-- Emergency Link -->
        <a href="tel:911" class="hidden sm:flex items-center gap-2 text-white font-semibold text-sm hover:text-red-400 transition-colors">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-500 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-red-500"></span>
          </span>
          <span>Emergencias: <strong class="text-red-400">911</strong></span>
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Main Header -->
<header class="bg-white sticky top-0 z-50 border-b border-slate-200 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 lg:h-[72px]">

      <!-- Logo - Always Visible -->
      <a href="/" class="flex items-center gap-3 flex-shrink-0">
        <!-- Logo Icon -->
        <div class="w-11 h-11 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, #ef4444 0%, #b91c1c 100%); box-shadow: 0 4px 14px rgba(239, 68, 68, 0.4);">
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="white">
            <path d="M12 2C12 2 7 8 7 13C7 16.866 9.23858 20 12 20C14.7614 20 17 16.866 17 13C17 8 12 2 12 2Z"/>
          </svg>
        </div>
        <!-- Logo Text -->
        <div class="flex flex-col">
          <span class="font-bold text-xl leading-none" style="color: #0f172a;">Firefighter</span>
          <span class="text-[10px] font-bold tracking-[0.2em] uppercase mt-0.5" style="color: #64748b;">México</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:block">
        <ul class="flex items-center gap-1">
          {navItems.map(({ href, label }) => (
            <li>
              <a
                href={href}
                class:list={[
                  'px-4 py-2 text-sm font-medium rounded-lg transition-colors',
                  isActive(href)
                    ? 'text-red-600 bg-red-50'
                    : 'text-slate-600 hover:text-slate-900 hover:bg-slate-100',
                ]}
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Actions - Always Visible -->
      <div class="flex items-center gap-2 sm:gap-3">
        <!-- Search Button -->
        <button
          type="button"
          id="search-btn"
          class="w-10 h-10 flex items-center justify-center rounded-lg transition-colors"
          style="color: #64748b;"
          aria-label="Buscar"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </button>

        <!-- Emergency CTA - Always Visible -->
        <a
          href="tel:911"
          class="flex items-center gap-2 px-4 sm:px-5 py-2.5 rounded-xl font-bold text-sm transition-colors"
          style="background-color: #dc2626; color: white; box-shadow: 0 4px 14px rgba(220, 38, 38, 0.4);"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span class="hidden sm:inline">Llamar</span>
          <span>911</span>
        </a>

        <!-- Mobile Menu Button -->
        <button
          type="button"
          id="mobile-menu-btn"
          class="lg:hidden w-10 h-10 flex items-center justify-center rounded-lg transition-colors"
          style="color: #475569;"
          aria-label="Menú"
          aria-expanded="false"
        >
          <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
          <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden border-t border-slate-100 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-4">
      <nav>
        <ul class="space-y-1">
          {navItems.map(({ href, label }) => (
            <li>
              <a
                href={href}
                class:list={[
                  'flex items-center px-4 py-3 rounded-xl font-medium transition-colors',
                  isActive(href)
                    ? 'text-red-600 bg-red-50'
                    : 'text-slate-700 hover:bg-slate-50',
                ]}
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <div class="mt-4 pt-4 border-t border-slate-100">
        <a
          href="tel:911"
          class="flex items-center justify-center gap-2 w-full py-4 bg-red-600 hover:bg-red-700 text-white font-bold rounded-xl transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span>Llamar al 911</span>
        </a>
      </div>
    </div>
  </div>
</header>

<!-- Search Modal -->
<div id="search-modal" class="fixed inset-0 z-[100] hidden">
  <div class="absolute inset-0 bg-black/60 backdrop-blur-sm" id="search-backdrop"></div>
  <div class="relative flex items-start justify-center pt-24 px-4">
    <div class="w-full max-w-lg bg-white rounded-2xl shadow-2xl overflow-hidden">
      <!-- Search Input -->
      <div class="p-4">
        <div class="relative">
          <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          <input
            type="search"
            id="search-input"
            placeholder="Buscar estaciones de bomberos..."
            class="w-full h-14 pl-12 pr-4 text-lg text-slate-900 placeholder-slate-400 bg-slate-100 border-0 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500"
            autocomplete="off"
          />
        </div>
      </div>

      <!-- Quick Links -->
      <div class="px-4 pb-4">
        <p class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-3">Populares</p>
        <div class="flex flex-wrap gap-2">
          <a href="/directorio/ciudad-de-mexico" class="px-4 py-2 text-sm font-medium text-slate-600 bg-slate-100 hover:bg-red-50 hover:text-red-600 rounded-lg transition-colors">Ciudad de México</a>
          <a href="/directorio/jalisco" class="px-4 py-2 text-sm font-medium text-slate-600 bg-slate-100 hover:bg-red-50 hover:text-red-600 rounded-lg transition-colors">Jalisco</a>
          <a href="/directorio/nuevo-leon" class="px-4 py-2 text-sm font-medium text-slate-600 bg-slate-100 hover:bg-red-50 hover:text-red-600 rounded-lg transition-colors">Nuevo León</a>
        </div>
      </div>

      <!-- Footer -->
      <div class="px-4 py-3 bg-slate-50 border-t border-slate-100 flex items-center justify-between text-xs text-slate-500">
        <span class="flex items-center gap-2">
          <kbd class="px-2 py-1 bg-white border border-slate-200 rounded text-xs">↵</kbd>
          <span>buscar</span>
        </span>
        <span class="flex items-center gap-2">
          <kbd class="px-2 py-1 bg-white border border-slate-200 rounded text-xs">esc</kbd>
          <span>cerrar</span>
        </span>
      </div>
    </div>
  </div>
</div>

<script>
  // Mobile Menu Toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  mobileMenuBtn?.addEventListener('click', () => {
    const isHidden = mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden', !isHidden);
    closeIcon?.classList.toggle('hidden', isHidden);
    mobileMenuBtn.setAttribute('aria-expanded', String(!isHidden));
  });

  // Search Modal
  const searchBtn = document.getElementById('search-btn');
  const searchModal = document.getElementById('search-modal');
  const searchBackdrop = document.getElementById('search-backdrop');
  const searchInput = document.getElementById('search-input') as HTMLInputElement;

  function openSearch() {
    searchModal?.classList.remove('hidden');
    setTimeout(() => searchInput?.focus(), 100);
    document.body.style.overflow = 'hidden';
  }

  function closeSearch() {
    searchModal?.classList.add('hidden');
    document.body.style.overflow = '';
  }

  searchBtn?.addEventListener('click', openSearch);
  searchBackdrop?.addEventListener('click', closeSearch);

  document.addEventListener('keydown', (e) => {
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      openSearch();
    }
    if (e.key === 'Escape') closeSearch();
  });
</script>
