---
import Button from '../ui/Button.astro';
import Logo from '../ui/Logo.astro';

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Inicio' },
  { href: '/directorio', label: 'Directorio' },
  { href: '/mapa', label: 'Mapa' },
  { href: '/emergencias', label: 'Emergencias' },
  { href: '/blog', label: 'Blog' },
];
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-slate-200">
  <div class="container-custom">
    <nav class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <Logo variant="default" size="md" class="hidden sm:flex" />
      <Logo variant="icon-only" size="md" class="sm:hidden" />

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navItems.map(({ href, label }) => (
          <a
            href={href}
            class:list={[
              'px-4 py-2 rounded-lg font-medium transition-colors',
              currentPath === href
                ? 'text-fire-600 bg-fire-50'
                : 'text-slate-600 hover:text-slate-900 hover:bg-slate-100',
            ]}
          >
            {label}
          </a>
        ))}
      </div>

      <!-- Emergency Button + Mobile Menu -->
      <div class="flex items-center gap-3">
        <a
          href="tel:911"
          class="hidden sm:flex items-center gap-2 px-4 py-2 bg-fire-600 text-white font-semibold rounded-lg hover:bg-fire-700 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span>911</span>
        </a>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          type="button"
          class="md:hidden p-2 rounded-lg text-slate-600 hover:bg-slate-100"
          aria-label="Abrir menÃº"
          aria-expanded="false"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-slate-200 bg-white">
    <div class="container-custom py-4 space-y-1">
      {navItems.map(({ href, label }) => (
        <a
          href={href}
          class:list={[
            'block px-4 py-3 rounded-lg font-medium transition-colors',
            currentPath === href
              ? 'text-fire-600 bg-fire-50'
              : 'text-slate-600 hover:text-slate-900 hover:bg-slate-100',
          ]}
        >
          {label}
        </a>
      ))}
      <a
        href="tel:911"
        class="flex items-center justify-center gap-2 mt-4 px-4 py-3 bg-fire-600 text-white font-semibold rounded-lg"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <span>Emergencias: 911</span>
      </a>
    </div>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('hidden');
    menuButton.setAttribute('aria-expanded', String(!isOpen));
  });
</script>
