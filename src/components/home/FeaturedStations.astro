---
/**
 * FeaturedStations Component - Clean Professional Design
 * Focused on essential information for emergency services
 */

const featuredStations = [
  {
    name: 'Estación Central CDMX',
    city: 'Ciudad de México',
    state: 'Ciudad de México',
    stateSlug: 'ciudad-de-mexico',
    slug: 'estacion-central-comandante-leonardo-del-frago',
    address: 'Calle Versalles 46, Col. Juárez',
    phone: '+52 55 5768-2532',
    type: 'Profesional',
    services: ['Incendios', 'Rescate', 'HAZMAT'],
  },
  {
    name: 'Central Guadalajara',
    city: 'Guadalajara',
    state: 'Jalisco',
    stateSlug: 'jalisco',
    slug: 'estacion-central-guadalajara',
    address: 'Av. Alcalde 1351, Centro',
    phone: '+52 33 3837-4400',
    type: 'Profesional',
    services: ['Incendios', 'Rescate', 'Ambulancia'],
  },
  {
    name: 'Central Monterrey',
    city: 'Monterrey',
    state: 'Nuevo León',
    stateSlug: 'nuevo-leon',
    slug: 'estacion-central-monterrey',
    address: 'Av. Cuauhtémoc 456 Norte',
    phone: '+52 81 8342-0053',
    type: 'Profesional',
    services: ['Incendios', 'Rescate', 'Prevención'],
  },
];
---

<section class="py-16 md:py-24" style="background-color: #f8fafc;">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-4 mb-10">
      <div>
        <h2 class="text-2xl md:text-3xl font-bold mb-2" style="color: #0f172a;">
          Estaciones Destacadas
        </h2>
        <p class="text-base" style="color: #64748b;">
          Principales estaciones de bomberos del país
        </p>
      </div>
      <a
        href="/directorio"
        class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg text-sm font-semibold transition-colors"
        style="background-color: #0f172a; color: white;"
      >
        Ver todas
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>

    <!-- Cards Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {featuredStations.map((station) => (
        <article class="bg-white rounded-xl overflow-hidden transition-shadow duration-200 hover:shadow-lg" style="border: 1px solid #e2e8f0;">
          <!-- Red Top Bar -->
          <div class="h-1 w-full" style="background-color: #dc2626;"></div>

          <div class="p-5">
            <!-- Header -->
            <div class="flex items-center justify-between mb-3">
              <span class="px-2.5 py-1 rounded text-xs font-semibold" style="background-color: #fef2f2; color: #dc2626;">
                {station.type}
              </span>
              <span class="flex items-center gap-1.5 text-xs font-medium" style="color: #16a34a;">
                <span class="w-1.5 h-1.5 rounded-full" style="background-color: #16a34a;"></span>
                24/7
              </span>
            </div>

            <!-- Station Name -->
            <h3 class="font-bold text-lg mb-2" style="color: #0f172a;">
              <a href={`/directorio/${station.stateSlug}/${station.slug}`} class="hover:underline">
                {station.name}
              </a>
            </h3>

            <!-- Location -->
            <p class="text-sm font-medium mb-1" style="color: #dc2626;">{station.city}, {station.state}</p>
            <p class="text-sm mb-4" style="color: #64748b;">{station.address}</p>

            <!-- Services -->
            <div class="flex flex-wrap gap-1.5 mb-4 pb-4" style="border-bottom: 1px solid #f1f5f9;">
              {station.services.map((service) => (
                <span class="px-2 py-0.5 rounded text-xs font-medium" style="background-color: #f1f5f9; color: #475569;">
                  {service}
                </span>
              ))}
            </div>

            <!-- Actions -->
            <div class="flex gap-3">
              <a
                href={`tel:${station.phone}`}
                class="flex-1 flex items-center justify-center gap-2 py-2.5 rounded-lg text-sm font-semibold transition-colors"
                style="background-color: #f8fafc; color: #334155; border: 1px solid #e2e8f0;"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                Llamar
              </a>
              <a
                href={`/directorio/${station.stateSlug}/${station.slug}`}
                class="flex-1 flex items-center justify-center py-2.5 rounded-lg text-sm font-semibold transition-colors"
                style="background-color: #dc2626; color: white;"
              >
                Ver detalles
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
