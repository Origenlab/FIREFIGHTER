---
import Card from '../ui/Card.astro';
import Badge from '../ui/Badge.astro';
import Button from '../ui/Button.astro';

const featuredStations = [
  {
    name: 'Estación Central CDMX',
    fullName: 'Estación Central Comandante Leonardo del Frago',
    city: 'Ciudad de México',
    state: 'Ciudad de México',
    stateSlug: 'ciudad-de-mexico',
    slug: 'estacion-central-comandante-leonardo-del-frago',
    address: 'Calle Versalles 46, Col. Juárez',
    phone: '+52 55 5768-2532',
    type: 'Profesional',
    services: ['Incendios', 'Rescate', 'Hazmat'],
  },
  {
    name: 'Central Guadalajara',
    fullName: 'Estación Central de Bomberos Guadalajara',
    city: 'Guadalajara',
    state: 'Jalisco',
    stateSlug: 'jalisco',
    slug: 'estacion-central-guadalajara',
    address: 'Av. Alcalde 1351, Centro',
    phone: '+52 33 3837-4400',
    type: 'Profesional',
    services: ['Incendios', 'Rescate', 'Ambulancia'],
  },
  {
    name: 'Central Monterrey',
    fullName: 'Estación Central de Bomberos Monterrey',
    city: 'Monterrey',
    state: 'Nuevo León',
    stateSlug: 'nuevo-leon',
    slug: 'estacion-central-monterrey',
    address: 'Av. Cuauhtémoc 456 Norte',
    phone: '+52 81 8342-0053',
    type: 'Profesional',
    services: ['Incendios', 'Rescate', 'Prevención'],
  },
];
---

<section class="section">
  <div class="container-custom">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-4 mb-10">
      <div>
        <h2 class="text-3xl md:text-4xl font-display font-bold text-slate-800 mb-2">
          Estaciones Destacadas
        </h2>
        <p class="text-slate-600">
          Las principales estaciones de bomberos del país
        </p>
      </div>
      <Button href="/directorio" variant="outline">
        Ver todas las estaciones
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </Button>
    </div>

    <!-- Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {featuredStations.map((station) => (
        <Card padding="none" variant="highlight">
          <div class="p-6">
            <div class="flex items-start justify-between gap-4 mb-4">
              <div>
                <Badge variant="fire" size="sm">{station.type}</Badge>
              </div>
              <div class="w-10 h-10 bg-fire-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-fire-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
                </svg>
              </div>
            </div>

            <h3 class="font-display font-semibold text-lg text-slate-800 mb-1">
              {station.name}
            </h3>
            <p class="text-fire-600 text-sm font-medium mb-3">
              {station.city}, {station.state}
            </p>

            <p class="text-slate-500 text-sm mb-4">
              {station.address}
            </p>

            <div class="flex flex-wrap gap-2 mb-4">
              {station.services.map((service) => (
                <Badge variant="slate" size="sm">{service}</Badge>
              ))}
            </div>

            <div class="flex items-center justify-between pt-4 border-t border-slate-100">
              <a
                href={`tel:${station.phone}`}
                class="flex items-center gap-2 text-slate-600 hover:text-fire-600 transition-colors text-sm"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                {station.phone}
              </a>
              <a
                href={`/directorio/${station.stateSlug}/${station.slug}`}
                class="text-fire-600 hover:text-fire-700 font-medium text-sm flex items-center gap-1"
              >
                Ver detalle
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </Card>
      ))}
    </div>
  </div>
</section>
