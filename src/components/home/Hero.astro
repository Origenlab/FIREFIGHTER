---
import Button from '../ui/Button.astro';
---

<section class="relative bg-slate-900">
  <!-- Background Pattern -->
  <div class="absolute inset-0 grid-pattern opacity-20"></div>

  <!-- Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-r from-slate-900 via-slate-900 to-fire-900/40"></div>

  <div class="relative container-custom py-16 md:py-20">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Column: Content -->
      <div>
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-fire-600/20 border border-fire-500/30 rounded-full text-fire-400 text-sm font-medium mb-6">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-fire-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-fire-500"></span>
          </span>
          Directorio Actualizado 2026
        </div>

        <!-- Heading -->
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold text-white mb-5 leading-tight">
          Directorio Nacional de
          <span class="text-fire-500">Estaciones de Bomberos</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-lg text-slate-300 mb-8 leading-relaxed max-w-lg">
          Encuentra la estación más cercana en los 32 estados de México. Información de contacto, ubicación y servicios.
        </p>

        <!-- Search Bar -->
        <form action="/directorio" method="GET" class="mb-8">
          <div class="flex flex-col sm:flex-row gap-3">
            <div class="relative flex-1">
              <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              <input
                type="search"
                name="q"
                placeholder="Buscar por ciudad o estado..."
                class="w-full pl-12 pr-4 py-4 bg-white/10 border border-white/20 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-fire-500 focus:border-transparent transition-all"
              />
            </div>
            <Button variant="primary" size="lg" type="submit" class="sm:px-8">
              Buscar
            </Button>
          </div>
        </form>

        <!-- Quick Links -->
        <div class="flex flex-wrap gap-3">
          <a href="/directorio/ciudad-de-mexico" class="px-4 py-2 bg-white/10 hover:bg-white/20 rounded-lg text-sm text-slate-300 transition-colors">
            CDMX
          </a>
          <a href="/directorio/jalisco" class="px-4 py-2 bg-white/10 hover:bg-white/20 rounded-lg text-sm text-slate-300 transition-colors">
            Jalisco
          </a>
          <a href="/directorio/nuevo-leon" class="px-4 py-2 bg-white/10 hover:bg-white/20 rounded-lg text-sm text-slate-300 transition-colors">
            Nuevo León
          </a>
          <a href="/directorio" class="px-4 py-2 text-fire-400 hover:text-fire-300 text-sm transition-colors">
            Ver todos →
          </a>
        </div>
      </div>

      <!-- Right Column: Stats Card -->
      <div class="hidden lg:block">
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8">
          <!-- Stats Grid -->
          <div class="grid grid-cols-2 gap-6 mb-8">
            <div class="text-center p-4 bg-white/5 rounded-xl">
              <div class="text-4xl font-display font-bold text-white mb-1">700+</div>
              <div class="text-slate-400 text-sm">Estaciones</div>
            </div>
            <div class="text-center p-4 bg-white/5 rounded-xl">
              <div class="text-4xl font-display font-bold text-white mb-1">32</div>
              <div class="text-slate-400 text-sm">Estados</div>
            </div>
            <div class="text-center p-4 bg-white/5 rounded-xl">
              <div class="text-4xl font-display font-bold text-white mb-1">20k+</div>
              <div class="text-slate-400 text-sm">Bomberos</div>
            </div>
            <div class="text-center p-4 bg-white/5 rounded-xl">
              <div class="text-4xl font-display font-bold text-fire-500 mb-1">24/7</div>
              <div class="text-slate-400 text-sm">Servicio</div>
            </div>
          </div>

          <!-- Emergency CTA -->
          <div class="bg-fire-600 rounded-xl p-5 text-center">
            <p class="text-fire-100 text-sm mb-2">¿Emergencia? No esperes</p>
            <a href="tel:911" class="inline-flex items-center gap-2 text-2xl font-display font-bold text-white hover:text-fire-100 transition-colors">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Llama al 911
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile Stats (visible only on mobile) -->
    <div class="lg:hidden mt-10 grid grid-cols-3 gap-4 text-center">
      <div>
        <div class="text-2xl font-display font-bold text-white">700+</div>
        <div class="text-slate-400 text-xs">Estaciones</div>
      </div>
      <div>
        <div class="text-2xl font-display font-bold text-white">32</div>
        <div class="text-slate-400 text-xs">Estados</div>
      </div>
      <div>
        <div class="text-2xl font-display font-bold text-fire-500">911</div>
        <div class="text-slate-400 text-xs">Emergencias</div>
      </div>
    </div>
  </div>
</section>
