---
interface Props {
  variant?: 'default' | 'highlight' | 'bordered';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
}

const {
  variant = 'default',
  padding = 'md',
  href,
  class: className = '',
} = Astro.props;

const variantClasses = {
  default: 'bg-white border border-slate-200 shadow-sm hover:shadow-md hover:-translate-y-0.5',
  highlight: 'bg-white border-2 border-fire-200 shadow-sm hover:shadow-md hover:border-fire-400 hover:-translate-y-0.5',
  bordered: 'bg-white border-2 border-slate-200 hover:border-slate-300',
};

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const baseClasses = 'rounded-xl transition-all duration-200';
const classes = `${baseClasses} ${variantClasses[variant]} ${paddingClasses[padding]} ${className}`;
---

{href ? (
  <a href={href} class={`block ${classes}`}>
    <slot />
  </a>
) : (
  <div class={classes}>
    <slot />
  </div>
)}
