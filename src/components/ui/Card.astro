---
/**
 * Card Component - Clean Professional Design
 * Base card component used across the site
 * See: /docs/CARD-DESIGN.md for usage guidelines
 */

interface Props {
  variant?: 'default' | 'highlight' | 'state';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  href?: string;
  accentColor?: string;
  class?: string;
}

const {
  variant = 'default',
  padding = 'md',
  href,
  accentColor,
  class: className = '',
} = Astro.props;

const paddingStyles: Record<string, string> = {
  none: '',
  sm: 'padding: 1rem;',
  md: 'padding: 1.25rem;',
  lg: 'padding: 1.5rem;',
};

const baseStyle = `
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 0.75rem;
  overflow: hidden;
  transition: box-shadow 0.2s ease;
  ${paddingStyles[padding]}
`.trim();

const hoverStyle = variant === 'default' || variant === 'highlight'
  ? 'hover:shadow-lg'
  : '';
---

{href ? (
  <a href={href} class={`block ${hoverStyle} ${className}`} style={baseStyle}>
    {accentColor && <div style={`height: 4px; width: 100%; background-color: ${accentColor}; margin: -1.25rem -1.25rem 1.25rem -1.25rem; width: calc(100% + 2.5rem);`}></div>}
    <slot />
  </a>
) : (
  <div class={`${hoverStyle} ${className}`} style={baseStyle}>
    {accentColor && <div style={`height: 4px; width: 100%; background-color: ${accentColor}; margin: -1.25rem -1.25rem 1.25rem -1.25rem; width: calc(100% + 2.5rem);`}></div>}
    <slot />
  </div>
)}
