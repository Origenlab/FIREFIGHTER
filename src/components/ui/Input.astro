---
interface Props {
  type?: string;
  name: string;
  placeholder?: string;
  value?: string;
  required?: boolean;
  disabled?: boolean;
  size?: 'md' | 'lg';
  class?: string;
  id?: string;
}

const {
  type = 'text',
  name,
  placeholder = '',
  value = '',
  required = false,
  disabled = false,
  size = 'md',
  class: className = '',
  id,
} = Astro.props;

const sizeClasses = {
  md: 'px-4 py-3 text-base',
  lg: 'px-6 py-4 text-lg',
};

const baseClasses = 'w-full bg-white border border-slate-300 rounded-lg text-slate-700 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-fire-500 focus:border-transparent transition-all duration-200 disabled:bg-slate-100 disabled:cursor-not-allowed';
const classes = `${baseClasses} ${sizeClasses[size]} ${className}`;
---

<input
  type={type}
  name={name}
  id={id || name}
  placeholder={placeholder}
  value={value}
  required={required}
  disabled={disabled}
  class={classes}
/>
