---
import type { StationData, BreadcrumbItem } from '../../utils/seo';
import {
  generateEmergencyServiceSchema,
  generateBreadcrumbSchema,
  generateWebSiteSchema,
  generateOrganizationSchema,
  generateArticleSchema,
  generateStateDirectorySchema,
} from '../../utils/seo';

interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  canonicalUrl?: string;
  type?: 'website' | 'article' | 'place';
  publishedDate?: string;
  modifiedDate?: string;
  noindex?: boolean;
  // Station data for EmergencyService schema
  station?: StationData;
  // Breadcrumb items for BreadcrumbList schema
  breadcrumbs?: BreadcrumbItem[];
  // State directory data
  stateDirectory?: {
    name: string;
    stationCount: number;
  };
  // Include website/organization schema (for homepage)
  includeWebsiteSchema?: boolean;
  // Article data for blog posts
  article?: {
    author: string;
  };
}

const {
  title,
  description,
  image = '/images/og-image.jpg',
  imageAlt = title,
  canonicalUrl = Astro.url.href,
  type = 'website',
  publishedDate,
  modifiedDate,
  noindex = false,
  station,
  breadcrumbs,
  stateDirectory,
  includeWebsiteSchema = false,
  article,
} = Astro.props;

const siteName = 'Firefighter.com.mx';
const siteUrl = 'https://firefighter.com.mx';
const fullImageUrl = image.startsWith('http') ? image : `${siteUrl}${image}`;
const fullTitle = `${title} | ${siteName}`;

// Generate JSON-LD schemas
const schemas: object[] = [];

// EmergencyService schema for station pages
if (station) {
  schemas.push(generateEmergencyServiceSchema(station, canonicalUrl));
}

// BreadcrumbList schema
if (breadcrumbs && breadcrumbs.length > 0) {
  schemas.push(generateBreadcrumbSchema(breadcrumbs, siteUrl));
}

// Website + Organization schema for homepage
if (includeWebsiteSchema) {
  schemas.push(generateWebSiteSchema(siteUrl));
  schemas.push(generateOrganizationSchema(siteUrl));
}

// State directory schema
if (stateDirectory) {
  schemas.push(generateStateDirectorySchema(
    stateDirectory.name,
    stateDirectory.stationCount,
    canonicalUrl
  ));
}

// Article schema for blog posts
if (type === 'article' && article && publishedDate) {
  schemas.push(generateArticleSchema(
    {
      title,
      description,
      author: article.author,
      publishDate: publishedDate,
      modifiedDate,
      image: fullImageUrl,
    },
    canonicalUrl,
    siteUrl
  ));
}
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
<link rel="canonical" href={canonicalUrl} />
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Language & Region -->
<meta http-equiv="content-language" content="es-MX" />
<link rel="alternate" hreflang="es-MX" href={canonicalUrl} />
<link rel="alternate" hreflang="es" href={canonicalUrl} />
<link rel="alternate" hreflang="x-default" href={canonicalUrl} />

<!-- Geographic Tags -->
<meta name="geo.region" content="MX" />
<meta name="geo.placename" content="México" />

<!-- Additional SEO -->
<meta name="author" content="Firefighter.com.mx" />
<meta name="publisher" content="Firefighter.com.mx" />
<meta name="copyright" content={`© ${new Date().getFullYear()} Firefighter.com.mx`} />
<meta name="rating" content="general" />
<meta name="distribution" content="global" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type === 'place' ? 'place' : type} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:image:alt" content={imageAlt} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content="es_MX" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalUrl} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullImageUrl} />
<meta name="twitter:image:alt" content={imageAlt} />

<!-- Article specific -->
{type === 'article' && publishedDate && (
  <meta property="article:published_time" content={publishedDate} />
)}
{type === 'article' && modifiedDate && (
  <meta property="article:modified_time" content={modifiedDate} />
)}

<!-- Place specific (for station pages) -->
{type === 'place' && station && (
  <>
    <meta property="place:location:latitude" content={String(station.latitude)} />
    <meta property="place:location:longitude" content={String(station.longitude)} />
  </>
)}

<!-- JSON-LD Structured Data -->
{schemas.map((schema) => (
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
))}
