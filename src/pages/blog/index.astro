---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Badge from '../../components/ui/Badge.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const formatDate = (date: Date) => {
  return date.toLocaleDateString('es-MX', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<BaseLayout
  title="Blog - Artículos sobre Bomberos y Seguridad"
  description="Artículos, guías y noticias sobre bomberos, prevención de incendios y seguridad en México."
  breadcrumbs={[{ label: 'Blog' }]}
>
  <!-- Hero Section -->
  <section class="bg-slate-900">
    <div class="container-custom py-20 md:py-28">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Left Content -->
        <div class="text-center lg:text-left">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-fire-600 rounded-full mb-6">
            <span class="w-2 h-2 bg-white rounded-full"></span>
            <span class="text-white text-sm font-medium">Recursos y Guías</span>
          </div>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white mb-6 leading-[1.1]">
            <span class="text-fire-500">Blog</span>
          </h1>

          <p class="text-lg md:text-xl text-slate-400 mb-10 max-w-xl mx-auto lg:mx-0 leading-relaxed">
            Artículos, guías y recursos sobre bomberos,
            <span class="text-white font-semibold">prevención de incendios</span> y seguridad en México.
          </p>
        </div>

        <!-- Right Side - Info -->
        <div class="hidden lg:block">
          <p class="text-slate-300 text-lg leading-relaxed mb-6">
            Encuentra información útil sobre <strong class="text-white">prevención de incendios</strong>, consejos de seguridad, y noticias relevantes del mundo de los bomberos en México.
          </p>
          <p class="text-slate-300 text-lg leading-relaxed">
            Nuestro objetivo es <strong class="text-white">educar y concientizar</strong> a la ciudadanía sobre la importancia de la prevención y cómo actuar en caso de emergencia.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section bg-slate-50">
    <div class="container-custom">
      {posts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <article class="bg-white rounded-xl overflow-hidden" style="border: 1px solid #e2e8f0;">
              <div class="h-1 w-full" style="background-color: #dc2626;"></div>
              {post.data.image && (
                <img
                  src={post.data.image}
                  alt={post.data.imageAlt || post.data.title}
                  class="w-full h-48 object-cover"
                  loading="lazy"
                />
              )}
              <div class="p-6">
                <div class="flex flex-wrap gap-2 mb-3">
                  {post.data.tags.slice(0, 2).map((tag) => (
                    <Badge variant="slate" size="sm">{tag}</Badge>
                  ))}
                </div>
                <time class="text-sm text-slate-500">
                  {formatDate(post.data.pubDate)}
                </time>
                <h2 class="text-xl font-display font-semibold text-slate-800 mt-2 mb-3 hover:text-fire-600 transition-colors">
                  <a href={`/blog/${post.id}`}>{post.data.title}</a>
                </h2>
                <p class="text-slate-600 text-sm mb-4 line-clamp-2">
                  {post.data.description}
                </p>
                <a
                  href={`/blog/${post.id}`}
                  class="text-fire-600 hover:text-fire-700 font-medium text-sm flex items-center gap-1"
                >
                  Leer más
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="bg-white rounded-xl overflow-hidden max-w-md mx-auto" style="border: 1px solid #e2e8f0;">
          <div class="h-1 w-full" style="background-color: #dc2626;"></div>
          <div class="p-12 text-center">
            <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-slate-800 mb-2">Próximamente</h3>
            <p class="text-slate-500">
              Estamos preparando contenido valioso sobre seguridad y prevención de incendios.
            </p>
          </div>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
