---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const formatDate = (date: Date) => {
  return date.toLocaleDateString('es-MX', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<BaseLayout
  title="Blog"
  description="Artículos sobre seguridad contra incendios, normativas, consejos y más. Mantente informado con Firefighter."
  keywords={['blog', 'seguridad', 'incendios', 'artículos', 'consejos']}
>
  <section class="section">
    <div class="container">
      <h1>Blog</h1>
      <p class="lead">Artículos, consejos y novedades sobre seguridad contra incendios.</p>

      <div class="posts-grid">
        {posts.map((post) => (
          <article class="post-card card">
            {post.data.image && (
              <img
                src={post.data.image}
                alt={post.data.imageAlt || post.data.title}
                class="post-image"
                loading="lazy"
              />
            )}
            <div class="card-content">
              <time datetime={post.data.pubDate.toISOString()}>
                {formatDate(post.data.pubDate)}
              </time>
              <h2>
                <a href={`/blog/${post.id}`}>{post.data.title}</a>
              </h2>
              <p>{post.data.description}</p>
              <div class="post-tags">
                {post.data.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
              <a href={`/blog/${post.id}`} class="btn btn-outline">Leer más</a>
            </div>
          </article>
        ))}
      </div>

      {posts.length === 0 && (
        <p class="no-posts">No hay artículos publicados aún.</p>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  h1 {
    margin-bottom: var(--space-2);
  }

  .lead {
    color: var(--color-text-secondary);
    font-size: var(--text-lg);
    margin-bottom: var(--space-10);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--space-8);
  }

  .post-card {
    display: flex;
    flex-direction: column;
  }

  .post-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .post-card time {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .post-card h2 {
    font-size: var(--text-xl);
    margin-block: var(--space-2);
  }

  .post-card h2 a {
    color: var(--color-text);
    text-decoration: none;
  }

  .post-card h2 a:hover {
    color: var(--color-primary);
  }

  .post-card p {
    color: var(--color-text-secondary);
    flex-grow: 1;
  }

  .post-tags {
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
    margin-bottom: var(--space-4);
  }

  .tag {
    background-color: var(--color-bg-secondary);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .no-posts {
    text-align: center;
    color: var(--color-text-muted);
    padding: var(--space-12);
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
