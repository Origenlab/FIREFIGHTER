---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const services = (await getCollection('services'))
  .sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout
  title="Servicios"
  description="Servicios profesionales de protección contra incendios: extintores, sistemas de detección, capacitación y más."
  keywords={['servicios', 'extintores', 'sistemas contra incendios', 'capacitación']}
>
  <section class="section">
    <div class="container">
      <h1>Nuestros Servicios</h1>
      <p class="lead">
        Soluciones integrales en seguridad y protección contra incendios para tu empresa.
      </p>

      <div class="services-grid">
        {services.map((service) => (
          <article class="service-card card">
            {service.data.image && (
              <img
                src={service.data.image}
                alt={service.data.imageAlt || service.data.title}
                class="service-image"
                loading="lazy"
              />
            )}
            <div class="card-content">
              {service.data.icon && <span class="service-icon">{service.data.icon}</span>}
              <h2>{service.data.title}</h2>
              <p>{service.data.description}</p>
              <a href={`/servicios/${service.id}`} class="btn btn-primary">
                Ver detalles
              </a>
            </div>
          </article>
        ))}
      </div>

      {services.length === 0 && (
        <p class="no-services">Próximamente más información sobre nuestros servicios.</p>
      )}
    </div>
  </section>

  <!-- CTA -->
  <section class="section cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>¿Necesitas un servicio personalizado?</h2>
        <p>Contáctanos y te asesoraremos según tus necesidades específicas.</p>
        <a href="/contacto" class="btn btn-primary">Solicitar Cotización</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  h1 {
    margin-bottom: var(--space-2);
  }

  .lead {
    color: var(--color-text-secondary);
    font-size: var(--text-lg);
    margin-bottom: var(--space-10);
    max-width: 600px;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--space-8);
  }

  .service-card {
    display: flex;
    flex-direction: column;
  }

  .service-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .service-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: var(--space-4);
  }

  .service-card h2 {
    font-size: var(--text-xl);
    margin-bottom: var(--space-3);
    color: var(--color-primary);
  }

  .service-card p {
    color: var(--color-text-secondary);
    flex-grow: 1;
    margin-bottom: var(--space-4);
  }

  .no-services {
    text-align: center;
    color: var(--color-text-muted);
    padding: var(--space-12);
  }

  .cta-section {
    background-color: var(--color-bg-secondary);
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin-inline: auto;
  }

  .cta-content h2 {
    margin-bottom: var(--space-4);
  }

  .cta-content p {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
