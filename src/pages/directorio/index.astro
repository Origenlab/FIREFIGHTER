---
import DirectoryLayout from '../../layouts/DirectoryLayout.astro';
import Card from '../../components/ui/Card.astro';
import states from '../../data/states.json';

// Sort states alphabetically
const sortedStates = [...states].sort((a, b) => a.name.localeCompare(b.name));
const totalStations = sortedStates.reduce((acc, s) => acc + s.totalStations, 0);

// Group by region
const regions: Record<string, typeof states> = {};
sortedStates.forEach(state => {
  if (!regions[state.region]) {
    regions[state.region] = [];
  }
  regions[state.region].push(state);
});

const regionNames: Record<string, string> = {
  'noroeste': 'Noroeste',
  'norte': 'Norte',
  'noreste': 'Noreste',
  'centro-occidente': 'Centro-Occidente',
  'centro': 'Centro',
  'sur': 'Sur',
  'sureste': 'Sureste',
  'peninsula': 'Península',
};
---

<DirectoryLayout
  title="Directorio Nacional de Estaciones de Bomberos"
  description="Explora el directorio completo de estaciones de bomberos en los 32 estados de México. Encuentra información de contacto, ubicación y servicios."
  breadcrumbs={[{ label: 'Directorio' }]}
>
  <!-- Header -->
  <div class="mb-10">
    <h1 class="text-3xl md:text-4xl font-display font-bold text-slate-800 mb-4">
      Directorio Nacional
    </h1>
    <p class="text-lg text-slate-600 max-w-3xl">
      Explora las <span class="font-semibold text-fire-600">{totalStations}+</span> estaciones de bomberos registradas en los <span class="font-semibold">32 estados</span> de la República Mexicana.
    </p>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
    <div class="card p-4 text-center">
      <div class="text-2xl font-display font-bold text-fire-600">{totalStations}+</div>
      <div class="text-sm text-slate-500">Estaciones</div>
    </div>
    <div class="card p-4 text-center">
      <div class="text-2xl font-display font-bold text-slate-800">32</div>
      <div class="text-sm text-slate-500">Estados</div>
    </div>
    <div class="card p-4 text-center">
      <div class="text-2xl font-display font-bold text-slate-800">20,000+</div>
      <div class="text-sm text-slate-500">Bomberos</div>
    </div>
    <div class="card p-4 text-center">
      <div class="text-2xl font-display font-bold text-gold-500">911</div>
      <div class="text-sm text-slate-500">Emergencias</div>
    </div>
  </div>

  <!-- States Grid by Region -->
  <div class="space-y-12">
    {Object.entries(regions).map(([region, stateList]) => (
      <div>
        <h2 class="text-xl font-display font-semibold text-slate-700 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-fire-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
          </svg>
          {regionNames[region] || region}
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
          {stateList.map((state) => (
            <a
              href={`/directorio/${state.slug}`}
              class="card p-4 hover:border-fire-400 group"
            >
              <h3 class="font-semibold text-slate-800 group-hover:text-fire-600 transition-colors mb-1 truncate">
                {state.name}
              </h3>
              <div class="flex items-center justify-between">
                <p class="text-sm text-slate-500">
                  {state.totalStations} estaciones
                </p>
                <svg class="w-4 h-4 text-slate-400 group-hover:text-fire-600 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    ))}
  </div>

  <!-- Emergency Banner -->
  <div class="mt-16 bg-fire-600 rounded-2xl p-8 text-center text-white">
    <h2 class="text-2xl font-display font-bold mb-2">¿Tienes una emergencia?</h2>
    <p class="text-fire-100 mb-4">No pierdas tiempo buscando. Llama inmediatamente al número de emergencias.</p>
    <a
      href="tel:911"
      class="inline-flex items-center gap-2 px-8 py-4 bg-white text-fire-600 font-bold rounded-xl hover:bg-fire-50 transition-colors"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
      </svg>
      Llamar al 911
    </a>
  </div>
</DirectoryLayout>
