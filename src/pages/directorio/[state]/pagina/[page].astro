---
import DirectoryLayout from '../../../../layouts/DirectoryLayout.astro';
import StationCard from '../../../../components/directory/StationCard.astro';
import Badge from '../../../../components/ui/Badge.astro';
import Pagination from '../../../../components/ui/Pagination.astro';
import { getCollection } from 'astro:content';
import states from '../../../../data/states.json';

export async function getStaticPaths() {
  const ITEMS_PER_PAGE = 12;
  const allStations = await getCollection('stations');
  const paths: { params: { state: string; page: string }; props: any }[] = [];

  for (const state of states) {
    const stateStations = allStations.filter(
      (station) => station.data.stateSlug === state.slug
    );

    const totalPages = Math.ceil(stateStations.length / ITEMS_PER_PAGE);

    // Only generate pagination pages if there's more than one page
    // Skip page 1 since that's handled by the index
    for (let page = 2; page <= totalPages; page++) {
      paths.push({
        params: { state: state.slug, page: String(page) },
        props: { state, pageNum: page },
      });
    }
  }

  return paths;
}

const ITEMS_PER_PAGE = 12;
const { state, pageNum } = Astro.props;
const currentPage = pageNum;

// Get all stations for this state
const allStations = await getCollection('stations');
const stateStations = allStations.filter(
  (station) => station.data.stateSlug === state.slug
);

// Sort by municipality (alphabetical) then by name
stateStations.sort((a, b) => {
  const municipalityCompare = a.data.municipality.localeCompare(b.data.municipality);
  if (municipalityCompare !== 0) return municipalityCompare;
  return a.data.name.localeCompare(b.data.name);
});

// Pagination
const totalPages = Math.ceil(stateStations.length / ITEMS_PER_PAGE);
const startIndex = (currentPage - 1) * ITEMS_PER_PAGE;
const endIndex = startIndex + ITEMS_PER_PAGE;
const paginatedStations = stateStations.slice(startIndex, endIndex);

// Group stations by municipality
const municipalityGroups = stateStations.reduce((acc, station) => {
  const municipality = station.data.municipality;
  if (!acc[municipality]) {
    acc[municipality] = [];
  }
  acc[municipality].push(station);
  return acc;
}, {} as Record<string, typeof stateStations>);

const municipalities = Object.keys(municipalityGroups).sort();
---

<DirectoryLayout
  title={`Estaciones de Bomberos en ${state.name} - Página ${currentPage}`}
  description={`Directorio de estaciones de bomberos en ${state.name}. Página ${currentPage} de ${totalPages}. Encuentra teléfonos, direcciones y servicios de emergencia.`}
  breadcrumbs={[
    { label: 'Directorio', href: '/directorio' },
    { label: state.name, href: `/directorio/${state.slug}` },
    { label: `Página ${currentPage}` },
  ]}
>
  <!-- Prev/Next links for SEO -->
  <link slot="head" rel="prev" href={currentPage === 2 ? `/directorio/${state.slug}` : `/directorio/${state.slug}/pagina/${currentPage - 1}`} />
  {currentPage < totalPages && (
    <link slot="head" rel="next" href={`/directorio/${state.slug}/pagina/${currentPage + 1}`} />
  )}

  <!-- Header -->
  <div class="mb-8">
    <div class="flex flex-wrap items-center gap-3 mb-4">
      <h1 class="text-3xl md:text-4xl font-display font-bold text-slate-800">
        {state.name}
      </h1>
      <Badge variant="fire">{stateStations.length} estaciones</Badge>
      <Badge variant="slate">Página {currentPage}</Badge>
    </div>
    <p class="text-lg text-slate-600">
      Directorio de estaciones de bomberos en {state.name}. Capital: <span class="font-medium">{state.capital}</span>
    </p>
  </div>

  <!-- Quick Info -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
    <div class="card p-4">
      <div class="text-sm text-slate-500 mb-1">Estaciones</div>
      <div class="text-2xl font-display font-bold text-fire-600">{stateStations.length}</div>
    </div>
    <div class="card p-4">
      <div class="text-sm text-slate-500 mb-1">Capital</div>
      <div class="text-lg font-semibold text-slate-800 truncate">{state.capital}</div>
    </div>
    <div class="card p-4">
      <div class="text-sm text-slate-500 mb-1">Alcaldías</div>
      <div class="text-lg font-semibold text-slate-800">{municipalities.length}</div>
    </div>
    <div class="card p-4">
      <div class="text-sm text-slate-500 mb-1">Emergencias</div>
      <div class="text-2xl font-display font-bold text-gold-500">911</div>
    </div>
  </div>

  <!-- Stations List -->
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {paginatedStations.map((station) => (
      <StationCard station={station} />
    ))}
  </div>

  {/* Pagination */}
  <Pagination
    currentPage={currentPage}
    totalPages={totalPages}
    basePath={`/directorio/${state.slug}`}
  />

  {/* Showing info */}
  <p class="text-center text-sm text-slate-500 mt-2">
    Mostrando {startIndex + 1}-{Math.min(endIndex, stateStations.length)} de {stateStations.length} estaciones
  </p>

  <!-- Emergency CTA -->
  <div class="mt-12 bg-slate-800 rounded-2xl p-6 flex flex-col sm:flex-row items-center justify-between gap-4">
    <div class="text-center sm:text-left">
      <h3 class="text-lg font-display font-semibold text-white mb-1">
        ¿Emergencia en {state.name}?
      </h3>
      <p class="text-slate-400 text-sm">
        No pierdas tiempo. Llama al número de emergencias nacional.
      </p>
    </div>
    <a
      href="tel:911"
      class="flex items-center gap-2 px-6 py-3 bg-fire-600 text-white font-semibold rounded-lg hover:bg-fire-700 transition-colors whitespace-nowrap"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
      </svg>
      Llamar al 911
    </a>
  </div>
</DirectoryLayout>
