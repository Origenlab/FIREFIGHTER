---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import StationCard from '../../../components/directory/StationCard.astro';
import Pagination from '../../../components/ui/Pagination.astro';
import { getCollection } from 'astro:content';
import states from '../../../data/states.json';

const ITEMS_PER_PAGE = 12;

export async function getStaticPaths() {
  return states.map((state) => ({
    params: { state: state.slug },
    props: { state },
  }));
}

const { state } = Astro.props;

// Get all stations for this state
const allStations = await getCollection('stations');
const stateStations = allStations.filter(
  (station) => station.data.stateSlug === state.slug
);

// Sort by municipality (alphabetical) then by name
stateStations.sort((a, b) => {
  const municipalityCompare = a.data.municipality.localeCompare(b.data.municipality);
  if (municipalityCompare !== 0) return municipalityCompare;
  return a.data.name.localeCompare(b.data.name);
});

// Pagination
const currentPage = 1;
const totalPages = Math.ceil(stateStations.length / ITEMS_PER_PAGE);
const paginatedStations = stateStations.slice(0, ITEMS_PER_PAGE);

// Group stations by municipality
const municipalityGroups = stateStations.reduce((acc, station) => {
  const municipality = station.data.municipality;
  if (!acc[municipality]) {
    acc[municipality] = [];
  }
  acc[municipality].push(station);
  return acc;
}, {} as Record<string, typeof stateStations>);

const municipalities = Object.keys(municipalityGroups).sort();

// Determine municipality label based on state
const getMunicipalityLabel = (stateName: string) => {
  if (stateName === 'Ciudad de México') return 'alcaldías';
  return 'municipios';
};
const municipalityLabel = getMunicipalityLabel(state.name);
---

<BaseLayout
  title={`Estaciones de Bomberos en ${state.name}`}
  description={`Directorio completo de ${stateStations.length} estaciones de bomberos en ${state.name}. Encuentra teléfonos, direcciones, ubicación GPS y servicios de emergencia.`}
  breadcrumbs={[
    { label: 'Directorio', href: '/directorio' },
    { label: state.name },
  ]}
  stateDirectory={{
    name: state.name,
    stationCount: stateStations.length,
  }}
>
  <!-- Hero Section - Identical to Index -->
  <section class="bg-slate-900">
    <div class="container-custom py-20 md:py-28">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">

        <!-- Left Content -->
        <div class="text-center lg:text-left">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-fire-600 rounded-full mb-6">
            <span class="w-2 h-2 bg-white rounded-full"></span>
            <span class="text-white text-sm font-medium">{stateStations.length} Estaciones en {state.name}</span>
          </div>

          <!-- Main Heading -->
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white mb-6 leading-[1.1]">
            Bomberos en
            <span class="text-fire-500">{state.name}</span>
          </h1>

          <!-- Description -->
          <p class="text-lg md:text-xl text-slate-400 mb-10 max-w-xl mx-auto lg:mx-0 leading-relaxed">
            Directorio completo con información de contacto, ubicación GPS y servicios de
            <span class="text-white font-semibold">{stateStations.length} estaciones</span> en {municipalities.length} {municipalityLabel}.
          </p>

          <!-- Search Bar -->
          <form action="/directorio" method="GET" class="max-w-lg mx-auto lg:mx-0 mb-8">
            <div class="flex items-center bg-white rounded-2xl p-2 shadow-xl">
              <svg class="w-6 h-6 ml-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              <input
                type="search"
                name="q"
                placeholder={`Buscar en ${state.name}...`}
                class="flex-1 px-4 py-4 text-slate-800 placeholder-slate-400 bg-transparent border-0 focus:outline-none focus:ring-0 text-lg"
                aria-label="Buscar estaciones de bomberos"
              />
              <button type="submit" class="px-6 py-4 bg-fire-600 text-white font-semibold rounded-xl hover:bg-fire-700 transition-colors">
                Buscar
              </button>
            </div>
          </form>

          <!-- Breadcrumbs as Quick Links -->
          <div class="flex flex-wrap justify-center lg:justify-start gap-3">
            <a href="/directorio" class="px-3 py-1 text-sm text-slate-300 hover:text-white bg-slate-800 hover:bg-slate-700 rounded-full transition-colors">← Todos los estados</a>
            <a href="#estaciones" class="px-3 py-1 text-sm text-fire-400 hover:text-fire-300 transition-colors">Ver estaciones ↓</a>
          </div>
        </div>

        <!-- Right Side - Marketing Text -->
        <div class="hidden lg:block">
          <p class="text-slate-300 text-lg leading-relaxed mb-6">
            Directorio completo de estaciones de bomberos en <strong class="text-white">{state.name}</strong>. Nuestro directorio incluye información detallada de {stateStations.length} estaciones distribuidas en {municipalities.length} {municipalityLabel}, con datos de contacto directo, ubicación exacta con coordenadas GPS, servicios especializados y horarios de atención las 24 horas.
          </p>
          <p class="text-slate-300 text-lg leading-relaxed">
            Cada estación cuenta con información sobre el <strong class="text-white">tipo de cuerpo de bomberos</strong> (profesional, voluntario, industrial o aeroportuario), equipamiento disponible, áreas de cobertura y servicios de emergencia. Facilitamos que ciudadanos, empresas e instituciones en {state.name} puedan contactar rápidamente a la estación más cercana.
          </p>
        </div>
      </div>

      <!-- Mobile Marketing Text -->
      <div class="lg:hidden mt-10">
        <p class="text-slate-400 text-sm leading-relaxed">
          Directorio completo de estaciones de bomberos en {state.name}. Información de contacto, ubicación GPS y servicios de las {stateStations.length} estaciones en {municipalities.length} {municipalityLabel}.
        </p>
      </div>
    </div>
  </section>

  <!-- Emergency Banner -->
  <div class="bg-fire-600">
    <div class="container-custom py-4">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 text-center">
        <div class="flex items-center gap-3 text-white">
          <div class="w-10 h-10 bg-fire-700 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
          </div>
          <span class="font-semibold text-lg">¿Emergencia en {state.name}?</span>
        </div>
        <a
          href="tel:911"
          class="inline-flex items-center gap-2 px-6 py-3 bg-white text-fire-600 font-bold rounded-xl hover:bg-fire-50 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Llama al 911
        </a>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="bg-slate-50 min-h-screen">
    <div class="container-custom py-12">
      <div id="estaciones" class="pt-4">
        {stateStations.length > 0 ? (
          <>
            {/* Municipality/Alcaldía Cards Grid */}
            {municipalities.length > 1 && (
              <div class="mb-12">
                <div class="text-center mb-8">
                  <span class="inline-flex items-center gap-2 px-4 py-2 bg-fire-red/10 text-fire-red rounded-full text-sm font-semibold mb-4">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    </svg>
                    {municipalities.length} {state.name === 'Ciudad de México' ? 'Alcaldías' : 'Municipios'}
                  </span>
                  <h2 class="text-2xl md:text-3xl font-display font-bold text-navy mb-3">
                    {state.name === 'Ciudad de México' ? 'Alcaldías' : 'Municipios'} con Estaciones
                  </h2>
                  <p class="text-slate-600 max-w-2xl mx-auto">
                    Selecciona {state.name === 'Ciudad de México' ? 'una alcaldía' : 'un municipio'} para ver las estaciones de bomberos disponibles.
                  </p>
                </div>

                {/* Cards Grid - 3 Columns */}
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                  {municipalities.map((municipality) => {
                    const stationCount = municipalityGroups[municipality].length;
                    const firstStation = municipalityGroups[municipality][0];
                    const slugMunicipality = municipality.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '').replace(/\s+/g, '-');

                    return (
                      <a
                        href={`#${slugMunicipality}`}
                        class="group relative bg-white rounded-2xl overflow-hidden border-2 border-slate-200 hover:border-fire-red transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
                      >
                        {/* Top Accent Bar */}
                        <div class="h-1.5 bg-gradient-to-r from-fire-red to-fire-red-dark"></div>

                        <div class="p-6">
                          {/* Header with Municipality Name */}
                          <div class="flex items-start justify-between gap-3 mb-4">
                            <div class="flex-1">
                              <div class="flex items-center gap-2 mb-1">
                                <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-slate-100 text-slate-600">
                                  {state.name === 'Ciudad de México' ? 'Alcaldía' : 'Municipio'}
                                </span>
                              </div>
                              <h3 class="text-xl font-display font-bold text-navy group-hover:text-fire-red transition-colors">
                                {municipality}
                              </h3>
                            </div>

                            {/* Station Count Badge */}
                            <div class="flex flex-col items-center justify-center w-16 h-16 bg-slate-100 rounded-xl group-hover:bg-fire-red/10 transition-colors">
                              <span class="text-2xl font-bold text-fire-red">{stationCount}</span>
                              <span class="text-[10px] text-slate-500 uppercase tracking-wide">estaciones</span>
                            </div>
                          </div>

                          {/* Info */}
                          <div class="flex items-center gap-2 text-sm text-slate-500 mb-3">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                            <span>Estado: <strong class="text-slate-700">{state.name}</strong></span>
                          </div>

                          {/* Description */}
                          <p class="text-sm text-slate-600 leading-relaxed mb-4">
                            {stationCount === 1
                              ? `1 estación de bomberos registrada en ${municipality}.`
                              : `${stationCount} estaciones de bomberos registradas en ${municipality}.`
                            } Servicios de emergencia 24/7.
                          </p>

                          {/* Service Tags */}
                          <div class="flex flex-wrap gap-1.5 mb-4">
                            <span class="px-2 py-1 text-xs bg-slate-100 text-slate-600 rounded-md">
                              Emergencias
                            </span>
                            <span class="px-2 py-1 text-xs bg-slate-100 text-slate-600 rounded-md">
                              Rescate
                            </span>
                            <span class="px-2 py-1 text-xs bg-slate-100 text-slate-600 rounded-md">
                              Incendios
                            </span>
                          </div>

                          {/* CTA */}
                          <div class="flex items-center justify-between pt-4 border-t border-slate-100">
                            <span class="text-sm font-medium text-fire-red group-hover:text-fire-red-dark transition-colors">
                              Ver estaciones →
                            </span>
                            <div class="flex items-center gap-1 text-xs text-slate-400">
                              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                              </svg>
                              24/7
                            </div>
                          </div>
                        </div>
                      </a>
                    );
                  })}
                </div>
              </div>
            )}

            {/* Stations by Municipality */}
            {municipalities.map((municipality) => {
              const slugMunicipality = municipality.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '').replace(/\s+/g, '-');
              const municipalityStations = municipalityGroups[municipality];

              return (
                <div id={slugMunicipality} class="mb-12 scroll-mt-8">
                  <div class="flex items-center gap-3 mb-6">
                    <div class="w-1.5 h-8 bg-fire-red rounded-full"></div>
                    <h3 class="text-xl md:text-2xl font-display font-bold text-navy">
                      {municipality}
                    </h3>
                    <span class="px-3 py-1 text-sm font-medium bg-fire-red/10 text-fire-red rounded-full">
                      {municipalityStations.length} {municipalityStations.length === 1 ? 'estación' : 'estaciones'}
                    </span>
                  </div>

                  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {municipalityStations.map((station) => (
                      <StationCard station={station} />
                    ))}
                  </div>
                </div>
              );
            })}
          </>
        ) : (
          <div class="bg-white border-2 border-slate-200 rounded-2xl p-12 text-center">
            <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-slate-800 mb-2">Sin estaciones registradas</h3>
            <p class="text-slate-500 mb-4">
              Aún no tenemos estaciones registradas para {state.name}.
            </p>
          </div>
        )}
      </div>
    </div>
  </div>
</BaseLayout>
